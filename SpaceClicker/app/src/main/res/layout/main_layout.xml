<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".app.MainActivity"
    android:background="@mipmap/bg_space">

    <FrameLayout
        android:id="@+id/gameView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10">

        <ImageButton
            android:id="@+id/upgradeButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="0dp"
            android:src="@mipmap/upgrade_button"
            android:scaleType="fitCenter"
            android:onClick="onUpgradeButtonClick"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/achievementButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="0dp"
            android:src="@mipmap/achievement_button"
            android:scaleType="fitCenter"
            android:onClick="onAchievementButtonClick"
            android:background="@android:color/transparent"/>

    </LinearLayout>

</LinearLayout>